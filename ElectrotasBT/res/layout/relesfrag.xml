<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/rele1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="1" />

        <ToggleButton
            android:id="@+id/rele2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/rele3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="3" />

        <ToggleButton
            android:id="@+id/rele4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/rele5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="5" />

        <ToggleButton
            android:id="@+id/rele6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <ToggleButton
            android:id="@+id/rele7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="7" />

        <ToggleButton
            android:id="@+id/rele8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="8" />
    </LinearLayout>

</LinearLayout>